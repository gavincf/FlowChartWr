

;==============================================================================
; MACRO0
;==============================================================================
MR_LVD_ON MACRO
.IF ( CHIPNO 	=	'N589DXX0' )
	LDA	#C_BIT6
	TSB	BP1D
	TRB	BP1M
	TSB	BP1R
.ENDIF
.IF ( CHIPNO 	=	'N589DXX1' )
	LDA	#C_BIT2
	TSB	BP0D
	TRB	BP0M
	TSB	BP0R
.ENDIF
	LDA	#C_BIT0
	TSB	LVDC
	ENDM
MR_LVD_OFF MACRO
.IF ( CHIPNO 	=	'N589DXX0' )
	LDA	#C_BIT6
	TSB	BP1D
	TSB	BP1M
	TSB	BP1R
.ENDIF
.IF ( CHIPNO 	=	'N589DXX1' )
	LDA	#C_BIT2
	TSB	BP0D
	TSB	BP0M
	TSB	BP0R
.ENDIF	
	LDA	#C_BIT0
	TRB	LVDC
	ENDM
MR_DET_LVD_ON MACRO
	LDA	#C_BIT0
	BIT	LVDC ; enable LVD
	ENDM

N589_SET_VD MACRO VALUE
	LDA	LVDC
	AND	#11110001B
	ORA	#VALUE
	STA	LVDC
	ENDM
M_READ_N589_VD_FG MACRO
	LDA	LVDC
	BIT	#C_BIT7
	ENDM
M_DET_N589VD_ST MACRO
	LDA	#LVD_ST_BIT
	BIT	LVD_ST_RAM
	ENDM





