
;for stick 360'C
;action:
;block:1,vertical with ground ,2,HORIZONTAL with ground
;



;X,Y,Z in DA260B datasheet is minus:X-,Y-,Z-

R_TURN180_CHK_STEP 		DS 	1
R_TURN180_STEP_DLYCNT DS 	1
R_TURN180_CNT0 DS 1
R_TURN180_CNT1 DS 1
R_TURN180_OV_DLYCNT 	DS	2

;C_CHK_AVR1_EN EQU 0



MR_SET_TURN180_IDX MACRO VALUE1,VALUE2
;VALUE1 @GAP2
	LDA	#VALUE1
	STA	R_TURN180_STEP_DLYCNT
	LDA	#VALUE2
	STA	R_TURN180_CHK_STEP
	ENDM
	
MR_SET_TURN180_OV MACRO
	LDA	#.HIGH.(1000000H-1300*100/C_100GAP_FXF15) ;need 300ms for action
	STA	R_TURN180_OV_DLYCNT+1
	LDA	#.LOW.(1000000H-1300*100/C_100GAP_FXF15) ;need 300ms for action
	STA	R_TURN180_OV_DLYCNT
	ENDM
MR_STOP_TURN180_OV MACRO
	STZ	R_TURN180_OV_DLYCNT
	STZ	R_TURN180_OV_DLYCNT+1
	ENDM
	
