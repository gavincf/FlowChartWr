
;for stick 360'C
;action:
;block:1,vertical with ground ,2,HORIZONTAL with ground
;



;X,Y,Z in DA260B datasheet is minus:X-,Y-,Z-

R_XMOV_CHK_STEP 		DS 	1
R_XMOV_STEP_DLYCNT DS 	1
R_XMOV_CNT DS 1
R_XMOV_OV_DLYCNT 	DS	1

;C_CHK_AVR1_EN EQU 0



MR_SET_XMOV_IDX MACRO VALUE1,VALUE2
;VALUE1 @GAP2
	LDA	#VALUE1
	STA	R_XMOV_STEP_DLYCNT
	LDA	#VALUE2
	STA	R_XMOV_CHK_STEP
	ENDM
	
MR_SET_XMOV_OV MACRO
	LDA	#.LOW.(1000000H-800*100/C_100GAP_FXF15) ;need 300ms for action
	STA	R_XMOV_OV_DLYCNT
	ENDM
MR_STOP_XMOV_OV MACRO
	STZ	R_XMOV_OV_DLYCNT
	ENDM
	
